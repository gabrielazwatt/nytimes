<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="article"
            type="com.mostpopular.nytimes.model.Article" />
        <variable name="fragment" type="com.mostpopular.nytimes.ui.detail.ArticleDetailFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text='@{article.title?? ""}'
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text='@{article.byLine?? ""}'
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />
        <TextView
            android:id="@+id/tvPublishDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text='@{article.publishedDate?? ""}'
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthor" />
        <ImageView
            android:id="@+id/ivFullImage"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="24dp"
            android:src="@android:drawable/gallery_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPublishDate"
            app:loadImage='@{article.mediaList.size != 0 ? (article.mediaList.size == 1 ? article.mediaList.get(0).mediaMetadataList.get(1).url : article.mediaList.get(0).mediaMetadataList.get(2).url) : "" ??""}'
            android:contentDescription="@string/some_dummy_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFullImage"
            android:text='@{article.url?? ""}'
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/ivShare"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:id="@+id/tvLink"
            android:onClick="@{() -> fragment.goToWeb(article.url)}"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFullImage"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:id="@+id/ivShare"
            android:src="@android:drawable/ic_menu_share"
            android:onClick="@{() -> fragment.openShareDialog(article.url)}"
            android:contentDescription="@string/some_dummy_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>